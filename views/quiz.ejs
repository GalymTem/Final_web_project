<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>üéÆ Video Game Quiz</title>
    <script>
        let timeLeft = 300; // –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Ç–∞–π–º–µ—Ä –Ω–∞ 5 –º–∏–Ω—É—Ç (300 —Å–µ–∫—É–Ω–¥)
        function countdown() {
            if (timeLeft <= 0) {
                document.getElementById("quizForm").submit(); // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞ —Ñ–æ—Ä–º—ã –ø–æ –∏—Å—Ç–µ—á–µ–Ω–∏–∏ –≤—Ä–µ–º–µ–Ω–∏
            } else {
                document.getElementById("timer").innerText = timeLeft; // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–∞–π–º–µ—Ä –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ
                timeLeft--;
                setTimeout(countdown, 1000); // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–∞–∂–¥—É—é —Å–µ–∫—É–Ω–¥—É
            }
        }
        window.onload = countdown; // –ó–∞–ø—É—Å–∫–∞–µ–º —Ç–∞–π–º–µ—Ä –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
    </script>
    <style>
        .container {
            text-align: center;
            margin-top: 20px;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .quiz-question {
            margin-bottom: 20px;
        }
        .quiz-question input {
            margin-right: 10px;
        }
        #timer {
            font-weight: bold;
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>üéÆ Video Game Quiz</h2>
        <p>‚è≥ Time left: <span id="timer">300</span> seconds</p>
        
        <form id="quizForm" action="/quiz/submit" method="POST">
            <% questions.forEach((q, index) => { %>
                <div class="quiz-question">
                    <p><strong><%= index + 1 %>. <%= q.question %></strong></p>
                    <% q.options.forEach(option => { %>
                        <label>
                            <input type="radio" name="answers[<%= index %>]" value="<%= option %>" required> <%= option %>
                        </label><br>
                    <% }) %>
                </div>
            <% }) %>

            <button type="submit" class="btn">Submit</button>
        </form>

        <!-- –ö–Ω–æ–ø–∫–∞ –≤–æ–∑–≤—Ä–∞—Ç–∞ –Ω–∞ –≥–ª–∞–≤–Ω—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É -->
        <a href="/mainPage" class="btn">Back to Main Page</a>
    </div>
</body>
</html>
